{
  "name": "@luisalbertodev/my-design-system",
  "license": "MIT",
  "version": "0.1.2",
  "author": "Luis Alberto PÃ©rez Coello",
  "description": "A modern React + TypeScript component library boilerplate focused on accessibility, testing, and composability.",
  "bugs": {
    "url": "https://github.com/luisalbertodev/my-design-system/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "react",
    "typescript",
    "design-system",
    "component-library",
    "storybook",
    "jest",
    "playwright",
    "rollup",
    "eslint",
    "prettier",
    "husky",
    "commitlint",
    "accessibility",
    "a11y",
    "object-oriented programming",
    "oop",
    "solid principles",
    "design patterns"
  ],
  "homepage": "https://www.npmjs.com/package/@luisalbertodev/my-design-system",
  "repository": {
    "type": "git",
    "url": "https://github.com/luisalbertodev/my-design-system.git",
    "directory": "."
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "build": "rollup -c",
    "build:storybook": "storybook build -o ./storybook-static -c .storybook",
    "storybook:dev": "storybook dev -p 6006",
    "test": "NODE_ENV=test jest",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "test:integration": "NODE_ENV=test jest --testPathPattern=integration",
    "test:integration:watch": "NODE_ENV=test jest --testPathPattern=integration --watch",
    "test:unit": "NODE_ENV=test jest --testPathPattern=unit",
    "test:unit:watch": "NODE_ENV=test jest --testPathPattern=unit --watch",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"src/**/*.{ts,tsx}\"",
    "clean": "rm -rf dist build coverage  node_modules package-lock.json && npm cache clean --force",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=22.14.0",
    "npm": ">=10.9.2"
  },
